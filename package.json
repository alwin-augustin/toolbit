{
  "name": "toolbit",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "main": "electron/main.js",
  "author": {
    "name": "Toolbit",
    "email": "alwinaugustin@gmail.com"
  },
  "description": "A comprehensive collection of developer utilities",
  "scripts": {
    "dev": "npm run web:dev",
    "build": "npm run web:build",
    "preview": "vite preview",
    "check": "tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "web:dev": "vite",
    "web:build": "vite build",
    "web:build:preview": "VITE_DISABLE_PWA=true vite build",
    "web:preview": "VITE_DISABLE_PWA=true vite build && VITE_DISABLE_PWA=true vite preview",
    "desktop:dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "desktop:build": "cross-env ELECTRON=true vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "desktop:build:win": "cross-env ELECTRON=true vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "desktop:build:mac": "cross-env ELECTRON=true vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "desktop:build:mac:universal": "cross-env ELECTRON=true vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --universal",
    "desktop:build:linux": "cross-env ELECTRON=true vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --linux",
    "desktop:clean": "rm -rf release dist"
  },
  "build": {
    "appId": "com.toolbit.app",
    "productName": "Toolbit",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules",
      "!**/*.{ts,tsx,map}",
      "!**/*.md",
      "!**/LICENSE",
      "!**/.DS_Store"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "darkModeSupport": true,
      "type": "distribution",
      "minimumSystemVersion": "10.13.0"
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "iconSize": 96,
      "iconTextSize": 12,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "title": "${productName} ${version}",
      "internetEnabled": false,
      "sign": false
    },
    "pkg": {
      "allowAnywhere": true,
      "allowCurrentUserHome": true,
      "allowRootDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "synopsis": "A comprehensive collection of developer utilities",
      "description": "Toolbit provides a comprehensive set of utilities for developers including JSON formatters, encoders/decoders, and more."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "afterSign": "scripts/notarize.cjs",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-toggle": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-query": "^5.60.5",
    "@types/diff": "^7.0.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "asn1js": "^3.0.7",
    "cmdk": "^1.1.1",
    "convert-units": "^2.3.4",
    "cron-parser": "^4.9.0",
    "cronstrue": "^3.3.0",
    "cssbeautify": "^0.3.1",
    "csso": "^5.0.5",
    "date-fns": "^3.6.0",
    "diff": "^8.0.3",
    "dompurify": "^3.2.7",
    "graphql": "^16.12.0",
    "js-yaml": "^4.1.0",
    "marked": "^16.3.0",
    "papaparse": "^5.4.1",
    "pdf-lib": "^1.17.1",
    "pkijs": "^3.3.3",
    "prismjs": "^1.30.0",
    "protobufjs": "^8.0.0",
    "pvutils": "^1.1.5",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-simple-code-editor": "^0.14.1",
    "react-window": "^2.2.6",
    "terser": "^5.31.3",
    "wouter": "^3.3.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@noble/hashes": "^2.0.1",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/convert-units": "^2.3.12",
    "@types/cssbeautify": "^0.3.5",
    "@types/csso": "^5.0.4",
    "@types/dompurify": "^3.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/prismjs": "^1.26.5",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "jsdom": "^27.0.0",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.45.0",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}
